<Page class="page app-page"
	xmlns:dd="nativescript-drop-down"
	xmlns="http://schemas.nativescript.org/tns.xsd"
	loaded="pageLoaded"
	>
	<page.ActionBar>
		<ActionBar class="action-bar">
			<NavigationButton android.systemIcon="ic_menu_back" tap="goBack"/>
			<GridLayout colums="*, auto" row="*">
				<Label class="project-title" row="0" text="LVCC | Grades" textWrap="true" col="0" orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left"/>
				<Label col="1" class="nav-button-change" text="Semesters" row="0" orientation="horizontal"  
					ios:horizontalAlignment="right" 
					android:horizontalAlignment="right" 
					visibility="{{ academic_year ? 'collapsed' : 'visible' }}"
					tap="changeAcademicYear"/>
			</GridLayout>

		</ActionBar>
	</page.ActionBar>
	<GridLayout columns="*" rows="*">
		<ScrollView>
			<StackLayout col="0" row="0">
				<StackLayout class="dd-container" visibility="{{ academic_year ? 'visible' : 'collapsed' }}">
                    <StackLayout class="container">
                        <StackLayout>
            				<Label text="Summary of Grades" class="head-title head-name" textWrap="true"/>
            			</StackLayout>
            			<Label text="Please choose the academic year!" class="information" textWrap="true"/>
                        <StackLayout class="drop-down">
                            <dd:DropDown items="{{ items }}" selectedIndex="{{ selectedIndex }}"
                                opened="dropDownOpened" closed="dropDownClosed"
                                selectedIndexChanged="dropDownSelectedIndexChanged"
                            />
                        </StackLayout>
                     	<StackLayout class="buttons">
                            <Button tap="submitAcademicYear" text="Submit" class="font-awesome dd-button"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
			</StackLayout>
		</ScrollView>
		<StackLayout visibility="{{ academic_year ? 'collapsed' : 'visible' }}">
			<ScrollView>
				<GridLayout columns="*" rows="*">
					<StackLayout class="layout" col="0" row="0">
						<GridLayout rows="auto" class="head">
							<StackLayout row="0">
								<Label text="Summary of Grades" class="grade-text" textWrap="true"/>
							</StackLayout>
						</GridLayout>
						<StackLayout>
	                        <Label text="2nd Semester 2018-2019" textWrap="true" class="semester"/>
	                    </StackLayout>
	                    <StackLayout class="info">
			            	<StackLayout>
			            		<GridLayout rows="auto,auto" columns="*,*" class="student-info">
		                            <StackLayout row="0" col="0">
		                                <Label text="Name:" textWrap="true" style.fontWeight="bold"/>
		                                <Label class="data" text="Aron" textWrap="true"/>
		                            </StackLayout>
		                            <StackLayout row="0" col="1">
		                                <Label text="Student Number:" textWrap="true" style.fontWeight="bold"/>
		                                <Label class="data" text="12313" textWrap="true"/>
		                            </StackLayout>
		                            <StackLayout row="1" col="0">
		                                <Label text="Course & Year:" textWrap="true" style.fontWeight="bold"/>
		                                <Label class="data" text="BS IS" textWrap="true"/>
		                            </StackLayout>
		                            <StackLayout row="1" col="1">
		                                <Label text="Scholarship Status:" textWrap="true" style.fontWeight="bold"/>
		                                <Label class="data" text="Partial Scholars" textWrap="true"/>
		                            </StackLayout>
		                        </GridLayout>
			            	</StackLayout>
			            	<StackLayout>
			            		<GridLayout columns="auto,*" rows="auto" class="genAve">
			            			<Label text="General Average:" class="upCase" textWrap="true" row="0" col="0" style.fontWeight="bold"/>
			            			<Label text="1.50" class="data" textWrap="true" row="0" col="1"/>
		            			</GridLayout>
		                    </StackLayout>
		                </StackLayout>
		                <StackLayout class="table">
			            		<GridLayout columns="*,75,75" rows="auto" class="table-field">
			            			<Label text="Course" class="field" textWrap="true" row="0" col="0"/>
			            			<Label text="Midterm" class="field" textWrap="true" row="0" col="1"/>
			            			<Label text="Finals" class="field" textWrap="true"  row="0" col="2"/>
		            			</GridLayout>
		            		<GridLayout>
		            			<Repeater class="listview" id="grades">
		                            <Repeater.itemTemplate>
	                                    <StackLayout class="table-data">
	                                        <GridLayout rows="*" columns="*,75,75">
	                                            <Label class="data-info" text="{{ subjectTitle }}" textWrap="true" row="0" col="0"/>
	                                            <Label class="data-info term" text="{{ midterm }}" textWrap="true" row="0" col="1"/>
	                                            <Label class="data-info term" text="{{ finals }}" textWrap="true" row="0" col="2"/>
	                                        </GridLayout>
		                                </StackLayout>
		                            </Repeater.itemTemplate>
		                        </Repeater>
		            		</GridLayout>
		            	</StackLayout>
					</StackLayout>
				</GridLayout>
			</ScrollView>
		</StackLayout>
	</GridLayout>
</Page>
