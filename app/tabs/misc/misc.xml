<Page class="page app-page"
	xmlns:dd="nativescript-drop-down"
	xmlns="http://schemas.nativescript.org/tns.xsd"
	loaded="pageLoaded"
	>
	<page.ActionBar>
		<ActionBar class="action-bar">
			<NavigationButton android.systemIcon="ic_menu_back" tap="goBack"/>
			<ActionItem tap="onChange" ios.systemIcon="12" android.systemIcon="ic_menu_search" ios.position="right"
		visibility="{{ academic_year ? 'collapsed' : 'visible' }}"/>
			<GridLayout colums="*, auto" row="*">
				<Label class="project-title" row="0" text="LVCC | Student Ledger" textWrap="true" col="0" orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left"/>
			</GridLayout>
		</ActionBar>
	</page.ActionBar>
	<GridLayout rows="*" columns="*">
		<ScrollView>
			<StackLayout col="0" row="0">
				<StackLayout visibility="{{ academic_year ? 'visible' : 'collapsed' }}">
					<StackLayout class="error-message" visibility="{{ message ? 'visible' : 'collapsed' }}">
						<StackLayout class="error-container">
							<Label class="message" text="{{ message }}" textWrap="true"/>
						</StackLayout>
					</StackLayout>
					<StackLayout class="dd-container">
	                    <StackLayout class="container">
	                        <StackLayout>
	            				<Label text="Miscellaneous" class="head-title head-name" textWrap="true"/>
	            			</StackLayout>
	            			<Label text="Please choose the academic year!" class="information" textWrap="true"/>
	                        <StackLayout class="drop-down">
	                            <dd:DropDown items="{{ items }}" selectedIndex="{{ selectedIndex }}"
	                                opened="dropDownOpened" closed="dropDownClosed"
	                                selectedIndexChanged="dropDownSelectedIndexChanged"
	                            />
	                        </StackLayout>
	                     	<StackLayout class="buttons">
	                            <Button tap="submitAcademicYear" text="Submit" class="font-awesome fa dd-button"/>
	                        </StackLayout>
	                    </StackLayout>
	                </StackLayout>
	    		</StackLayout>
			</StackLayout>
		</ScrollView>
		<StackLayout class="layout" visibility="{{ academic_year ? 'collapsed' : 'visible' }}">
			<ScrollView>
				<GridLayout columns="*" rows="*">
					<StackLayout col="0" row="0">
						<StackLayout class="paymentInfo">
							<StackLayout>
								<GridLayout rows="*,*" columns="auto, *" class="head">
									<StackLayout row="0" col="1">
										<Label text="Student Ledger" class="payment-text" textWrap="true"/>
									</StackLayout>
								</GridLayout>
								<StackLayout >
			                        <Label text="2nd Semester" textWrap="true" class="semester"/>
			                    </StackLayout>
							</StackLayout>
							<StackLayout class="info">
				            	<StackLayout>
				            		<GridLayout rows="auto,auto" columns="*,*" class="student-info">
			                            <StackLayout row="0" col="0">
			                                <Label text="Name:" textWrap="true" style.fontWeight="bold"/>
			                                <Label class="data" text="Janet" textWrap="true"/>
			                            </StackLayout>
			                            <StackLayout row="0" col="1">
			                                <Label text="Student Number:" textWrap="true" style.fontWeight="bold"/>
			                                <Label class="data" text="dasdasdasdsd" textWrap="true"/>
			                            </StackLayout>
			                            <StackLayout row="1" col="0">
			                                <Label text="Course & Year:" textWrap="true" style.fontWeight="bold"/>
			                                <Label class="data" text="BSA" textWrap="true"/>
			                            </StackLayout>
			                            <StackLayout row="1" col="1">
			                                <Label text="Scholarship Status:" textWrap="true" style.fontWeight="bold"/>
			                                <Label class="data" text="Partial" textWrap="true"/>
			                            </StackLayout>
			                        </GridLayout>
				            	</StackLayout>
			                </StackLayout>
			                <StackLayout class="table">
			                	<StackLayout>
				            		<GridLayout columns="*,*" rows="auto" class="table-field">
				            			<Label text="Particulars" class="field" textWrap="true" row="0" col="0"/>
				            			<Label text="Amount Paid" class="field" textWrap="true" row="0" col="1"/>
				            			<!-- <Label text="Balance" class="field" textWrap="true"  row="0" col="2"/> -->
			            			</GridLayout>
			            		</StackLayout>
			                </StackLayout>
			                <GridLayout rows="*">
			        			<Repeater row="0" id="payments" class="listview">
			                        <Repeater.itemTemplate>
			                            <StackLayout class="table-data">
			                                <GridLayout rows="auto" columns="*,*">
			                                    <Label class="data-info" text="{{ particular }}" textWrap="true" row="0" col="0" style.fontWeight="bold"/>
			                                    <Label class="data-info ctr" text="{{ amount_paid }}" textWrap="true" row="0" col="1"/>
			                                </GridLayout>
			                            </StackLayout>
			                        </Repeater.itemTemplate>
			                    </Repeater>
			        		</GridLayout>
			        		<StackLayout class="table-data">
			                    <GridLayout rows="auto" columns="*,*">
			                        <Label class="data-info ctr" text="Total" textWrap="true" row="0" col="0"/>
			                        <Label class="data-info ctr" text="{{ 'PHP ' + total }}" col="1" textWrap="true"/>
			                    </GridLayout>
			                </StackLayout>
						</StackLayout>
					</StackLayout>
				</GridLayout>
			</ScrollView>
		</StackLayout>
	</GridLayout>
</Page>
